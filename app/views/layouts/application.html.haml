!!!
%html
  %head
    %title
      Project 1999 Database
      
      = @page_title unless @page_title.blank?
    = stylesheet_link_tag 'compiled/screen.css'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js"
    = javascript_include_tag 'rails'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield :head
    - if Rails.env == 'development'
      :javascript
        var disqus_developer = 1;
  %body{:class => controller_name}
    #wrapper{:class => action_name}
      #header
        .logo
          = link_to image_tag('logo.png'), root_path
        #nav
          = yield :nav
          %p= link_to('Item Search', items_search_path)
          = render :partial => 'layouts/profile_nav'
      %br.clear
      = flashes
      %h1= @page_title unless @page_title.blank?
      = yield
      .google
        = render :template => 'layouts/_google.html.erb'    
       
