.item{:name => addslashes(item.name)}
  .title
    .name
      = link_to(item.name, item_path(item))
  .body{:style => 'display:none;'}
    .icon
      = get_icon(item)
    .top
      = get_details(item)
    .slot
      = get_slot(item)
    .skill
      = get_skill(item)
    - unless item.ac == 0
      .ac
        AC:
        = item.ac
    - if item.effect?
      .effect
        = format_effect(item.effect)
    - if item.haste > 0
      .haste 
        HASTE:
        = item.haste
        = "%"
    .stats
      = get_stats(item)
    .mid
      WT:
      = get_weight(item)
      = get_size(item)
    .class
      = get_class(item)
    .race
      = get_race(item)
    %br.clear