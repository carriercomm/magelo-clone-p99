.container
  .not_classic
    %p
      = link_to('Not classic? Report this item!', report_non_classic_path(@item.id))
    %p
      = link_to('Other problem? Fill out the form!', new_report_path(:type => 'Item', :id => @item.id))
  = render :partial => 'profiles/item', :locals => {:item => @item}
  - if @item.alla_id > 0
    %p
      = link_to('Allakazam link', "http://everquest.allakhazam.com/db/item.html?item=#{@item.alla_id}", :target => '_blank')
  %br.clear

#disqus_thread
  %a{:href => "http://disqus.com", :class => "dsq-brlink"}
    comments powered by <span class="logo-disqus">Disqus</span>
:javascript
  var disqus_identifier = 'p99_item_#{@item.id}';

  (function() {
   var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
   dsq.src = 'http://project1999itemdatabase.disqus.com/embed.js';
   (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();

